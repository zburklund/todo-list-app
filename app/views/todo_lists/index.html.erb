<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to 'Show', todo_list, :class => 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_todo_list_path(todo_list), :class => 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Delete', todo_list, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'btn btn-danger btn-sm delete-todo-list' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo List', new_todo_list_path, :class => 'btn btn-success btn-sm' %>
